@model List<Team>
@{
    int count = 0;
}
<div class="container">
    <h1><a class="btn btn-primary" asp-action="Create">Create</a></h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Fullname</th>
                <th scope="col">Position</th>
                <th scope="col">Description</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
       
        @foreach (var item in Model)
        {
            count++;
           
            <tbody>
                <tr>
                    
                    
                <th scope="row">@count</th>
                <td>@item.Fullname</td>
                <td>@item.Position</td>
                    <td>@item.Description</td>
                    <td><img width="100" src="~/upload/@item.ImgUrl" /></td>
                    <td><a class="btn btn-dark" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                    <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>

            </tr>
                
            </tbody>
            }

       
    </table>
</div>